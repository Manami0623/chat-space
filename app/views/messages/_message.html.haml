.message{"data-id":"#{message.id}"}
  .line
    .line__uppername
      = message.user.name
    .line__date
      = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
    %br
    .line__centerrmessage
      - if message.content.present?
        %p.line__centermessage__content
        = message.content
        %br
      = image_tag message.image.url, class: `line__centermessage__image` if message.image.present?

